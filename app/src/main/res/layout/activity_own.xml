<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_own"
    tools:context="de.pixyel.dhbw.pixyel.OwnActivity">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        app:layout_scrollFlags="scroll|enterAlways">

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            app:srcCompat="@drawable/ic_keyboard_backspace_white_36dp"
            android:tint="@color/white"
            android:background="@color/colorPrimary"/>

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pictures"
            app:srcCompat="@drawable/ic_camera_white_36dp"
            android:tint="@color/white"
            android:background="@color/colorPrimary"
            android:layout_gravity="end"
            android:minWidth="20pt" />

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upload"
            app:srcCompat="@drawable/ic_upload_white_36dp"
            android:tint="@color/white"
            android:background="@color/colorPrimary"
            android:layout_gravity="end"
            android:minWidth="25pt" />

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refresh"
            app:srcCompat="@drawable/ic_autorenew_white_36dp"
            android:tint="@color/white"
            android:background="@color/colorPrimary"
            android:layout_gravity="end"
            android:minWidth="20pt" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/containerView">
    </FrameLayout>

</LinearLayout>